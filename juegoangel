<script>
// Función para asignar amigos y generar enlaces
function asignarAmigos() {
    const nombresInput = document.getElementById("names").value;
    const nombres = nombresInput.split(",").map(nombre => nombre.trim());

    if (nombres.length < 2) {
        alert("Por favor, ingresa al menos dos nombres.");
        return;
    }

    const amigos = [...nombres];
    let amigosAsignados = [];

    // Asignar un amigo oculto a cada persona
    while (amigos.length > 0) {
        let amigo = amigos.splice(Math.floor(Math.random() * amigos.length), 1)[0];
        amigosAsignados.push(amigo);
    }

    // Crear enlaces únicos para cada persona
    const player = getPlayerFromURL();
    if (!player) {
        alert("No se ha identificado el jugador. Asegúrate de que el enlace esté bien configurado.");
        return;
    }

    // Buscar el índice del jugador actual
    const index = nombres.indexOf(player);
    if (index === -1) {
        alert("El jugador no está en la lista.");
        return;
    }

    // Generar el enlace que corresponde al jugador actual
    const enlace = generateLink(player, amigosAsignados[index]);

    // Mostrar solo el enlace correspondiente al jugador actual
    const enlaceDiv = document.getElementById("person-links");
    const enlaceElemento = document.getElementById("enlace-para-ti");

    enlaceElemento.innerHTML = `<a href="${enlace}" target="_blank">${enlace}</a>`;
    enlaceDiv.classList.remove("hidden");

    document.getElementById("amigo-oculto-form").reset();
}

// Función para generar un enlace único para cada jugador
function generateLink(player, amigo) {
    const baseURL = window.location.href.split('?')[0]; // Esto garantiza que use la misma URL base
    const queryParams = `?player=${encodeURIComponent(player)}&amigo=${encodeURIComponent(amigo)}`;
    return baseURL + queryParams;
}

// Función para obtener el nombre del jugador desde la URL
function getPlayerFromURL() {
    const params = new URLSearchParams(window.location.search);
    return params.get('player');
}

// Comprobar si hay parámetros de URL para mostrar a quién le tocó
function mostrarAmigo() {
    const params = new URLSearchParams(window.location.search);
    const player = params.get('player');
    const amigo = params.get('amigo');
    
    if (player && amigo) {
        document.body.innerHTML = `<h1>Hola, ${player}!</h1><p>Tu amigo oculto es: <strong>${amigo}</strong></p>`;
    }
}

// Ejecutar la función mostrarAmigo cuando se carga la página si hay parámetros de URL
window.onload = mostrarAmigo;

</script>

