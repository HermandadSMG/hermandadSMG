<main>
    <section>
        <h2>Asignación de Amigos Ocultos</h2>
        <form id="amigo-oculto-form">
            <label for="names">Ingresa los nombres (separados por comas):</label><br>
            <input type="text" id="names" placeholder="Juan, Maria, Pedro" required><br><br>
            <button type="button" class="button" onclick="asignarAmigos()">Generar Enlaces</button>
        </form>

        <div id="person-links" class="person-links hidden">
            <h3>Enlace para ver tu Amigo Oculto:</h3>
            <p id="enlace-para-ti"></p>
